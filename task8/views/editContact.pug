doctype html
html(lang='en')
  head
    title("Addcontacts")
  body     
    center
      h1 Editing contact
      form(action=`/contacts/edit/${contact.id}` method="post")     
        label(for="name") First Name
        br
        input(type="text" for="id" name="name" value= contact.name)
        br
        br
        label(for="phoneNumber") Phone Number
        br
        input(type="text" for="id" name="phoneNumber" value= contact.phoneNumber)
        br
        br
        a(href=`contacts/edit${contact.id}`): button(type="submit") Save